{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "rootDir": "./",
    "jsx": "react",
    "module": "es2015",
    "noEmit": true,
    "noUnusedLocals": true,
    "pretty": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["es2015", "esnext", "dom"],
    "declaration": true,
    "declarationDir": "./lib"
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
